{
  "compilerOptions": {
    "noEmitOnError": true,
    "noErrorTruncation": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    "removeComments": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "sourceMap": false,

    "outDir": "dist",
    "declaration": false,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "jsx": "preserve",

    "lib": ["dom", "es2015"],
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",

    "baseUrl": ".",
    "paths": {
      "src": ["src"],
      "src/*": ["src/*"],
      "tests/*": ["tests/*"]
    }
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "node_modules",
    ".yalc",
    "dist"
  ]
}
